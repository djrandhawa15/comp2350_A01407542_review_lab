<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurants</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1 class="title">Restaurants</h1>

        <div class="box">
            <form action="/addRestaurant" method="POST">
                <div class="field">
                    <label class="label">Restaurant Name</label>
                    <div class="control">
                        <input class="input" type="text" name="name" required>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Description</label>
                    <div class="control">
                        <input class="input" type="text" name="description" required>
                    </div>
                </div>

                <button class="button is-primary" type="submit">Add Restaurant</button>
            </form>
        </div>

        <div class="box">
            <h2 class="subtitle">All Restaurants</h2>
            <p>Total Restaurants: <strong><%= restaurants.length %></strong></p>

            <% restaurants.forEach(restaurant => { %>
                <div class="card">
                    <div class="card-content">
                        <p class="title"><%= restaurant.name %></p>
                        <p class="subtitle"><%= restaurant.description %></p>

                        <div class="is-flex">
                            <a href="/showReviews?id=<%= restaurant.restaurant_id %>" class="button is-warning">
                                <i class="fas fa-star"></i> View Reviews
                            </a>

                            <form action="/deleteRestaurant" method="POST">
                                <input type="hidden" name="id" value="<%= restaurant.restaurant_id %>">
                                <button class="button is-danger" type="submit">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
